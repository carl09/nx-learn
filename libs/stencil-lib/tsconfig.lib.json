{
  
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h"
  },
  "exclude": ["**/*.spec.ts", "node_modules/@stencil/core/node_modules", "node_modules/@stencil/core/dist/declarations/testing.d.ts"],
  "include": [
    "./libs/stencil-lib/src",
    "types/jsx.d.ts"
  ]
}
